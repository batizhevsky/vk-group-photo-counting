source "https://rubygems.org/"

# App Stack
gem "sinatra", "~> 1.3"

gem 'omniauth'
gem 'omniauth-vkontakte'

gem 'vkontakte_api', github: '7even/vkontakte_api'

gem 'haml'
gem 'sinatra-static-assets'
gem 'sinatra-twitter-bootstrap', :require => 'sinatra/twitter-bootstrap'

gem 'thin'

group :development do
  gem "rake", "~> 10.0"
  gem "minitest", "~> 4.6"
  gem "rack-test", "~> 0.6"
end
